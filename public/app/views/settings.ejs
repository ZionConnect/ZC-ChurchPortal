                                    <option>CA</option>
                                    <option>CO</option>
                                    <option>CT</option>
                                    <option>DE</option>
                                    <option>FL</option>
                                    <option>GA</option>
                                    <option>HI</option>
                                    <option>ID</option>
                                    <option>IL</option>
                                    <option>IN</option>
                                    <option>IA</option>
                                    <option>KS</option>
                                    <option>KY</option>
                                    <option>LA</option>
                                    <option>ME</option>
                                    <option>MD</option>
                                    <option>MA</option>
                                    <option>MI</option>
                                    <option>MN</option>
                                    <option>MS</option>
                                    <option>MO</option>
                                    <option>MT</option>
                                    <option>NE</option>
                                    <option>NV</option>
                                    <option>NH</option>
                                    <option>NJ</option>
                                    <option>NM</option>
                                    <option>NY</option>
                                    <option>NC</option>
                                    <option>ND</option>
                                    <option>OH</option>
                                    <option>OK</option>
                                    <option>OR</option>
                                    <option>PA</option>
                                    <option>RI</option>
                                    <option>SC</option>
                                    <option>SD</option>
                                    <option>TN</option>
                                    <option>TX</option>
                                    <option>UT</option>
                                    <option>VT</option>
                                    <option>VA</option>
                                    <option>WA</option>
                                    <option>WV</option>
                                    <option>WI</option>
                                    <option>WY</option>
                                </select>
                            </div>
                            <!--church info zipcode-->
                            <div class="form-group">
                                <label class="control-label" for="churchZipcode">Zipcode</label>
                                <input type="text" class="form-control" id="churchZipcode" name="churchZipcode" value="{{currentUser.address.zip}}" data-ng-model="updateObject.zip" />
                            </div>
                            <!--church info website-->
                            <div class="form-group">
                                <label class="control-label" for="churchWebsite">Website</label>
                                <input type="text" class="form-control" id="churchWebsite" name="churchWebsite" value="{{currentUser.website}}" data-ng-model="updateObject.website"  />
                            </div>
                            <!--church info phone-->
                            <div class="form-group">
                                <label class="control-label" for="churchPhoneNumber">Phone Number</label>
                                <input type="text" class="form-control" id="churchPhoneNumber" name="churchPhoneNumber" value="{{currentUser.phone}}" data-ng-model="updateObject.phone" />
                            </div>
                            <!--church info bio-->
                            <div class="form-group">
                                <label class="control-label" for="churchBio">Bio</label>
                                <textarea class="form-control" id="churchBio" name="churchBio" rows="5" cols="100%" value="{{currentUser.bio}}" data-ng-model="updateObject.bio"></textarea>
                            </div>
                            <!--authentication icon and update button-->
                            <div class="form-group">
                                <div class="col-lg-12 col-md-12">
                                    <div class="col-lg-6 col-md-6"><a href=""><span class="glyphicon glyphicon-info-sign"></span></a></div><!--church info icon-->
                                    <div class="col-lg-6 col-md-6"><button type="button" class="btn btn-md btn-purple pull-right" data-ng-click="updateChurch()">Update</button></div><!--church info update button-->
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--column 2-->
        <div class="col-lg-6 col-md-6 ">
            <!--authentication container-->
            <div class="col-lg-12 col-md-12 single-settings-form">
                <div class="panel panel-default">
                    <!--authentication head-->
                    <div class="panel-heading">
                        <h3 class="panel-title purple-header">Account Authentication</h3>
                    </div>
                    <!--authentication body-->
                    <div class="panel-body">
                        <!--authentication form-->
                        <form>
                            <!--authentication email-->
                            <div class="form-group">
                                <label class="control-label" for="accountEmail">Email</label>
                                <input type="email" class="form-control" id="accountEmail" name="accountEmail" value="{{currentUser.email}}" />
                            </div>
                            <!--authentication current password-->
                            <div class="form-group">
                                <label class="control-label" for="currentPassword">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword" />
                            </div>
                            <!--authentication new password-->
                            <div class="form-group">
                                <label class="control-label" for="newPassword">New Password</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" data-ng-model="newPassword"/>
                            </div>
                            <!--authentication retype password-->
                            <div class="form-group">
                                <label class="control-label" for="retypeNewPassword">Retype Password</label>
                                <input type="password" class="form-control" id="retypeNewPassword" name="retypeNewPassword" data-ng-model="newPasswordRetyped"/>
                            </div>
                            <!--authentication icon and update button-->
                            <div class="form-group">
                                <div class="col-lg-12 col-md-12">
                                    <div class="col-lg-6 col-md-6"><a href=""><span class="glyphicon glyphicon-info-sign"></span></a></div><!--authentication info icon-->
                                    <div class="col-lg-6 col-md-6"><button type="button" class="btn btn-md btn-purple pull-right" data-ng-show="!resetPasswordConfirmationMessage" data-ng-click="resetPasswordConfirmationMessage = true; passwordMatchError = false;">Reset Password</button></div><!--authentication reset button-->
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--service time container-->
            <div class="col-lg-12 col-md-12 single-settings-form">
                <div class="panel panel-default">
                    <!--service time head-->
                    <div class="panel-heading">
                        <h3 class="panel-title purple-header">Service Times</h3>
                    </div>
                    <!--service time body-->
                    <div class="panel-body">
                        <!--service time form-->
                        <div class="col-lg-12 col-md-12">
                            <div class="fcol-lg-12 col-md-12">
                                <!--service time active times-->
                                <div class="well well-sm clearfix">
                                    <!--service time single time-->
                                    <div class="col-lg-12 col-md-12" ng-repeat="service in currentUser.services">
                                        <div class="alert-dismissable">
                                            <span>{{service.day}} {{service.time}}</span><!--service time single active date & time-->
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true" ng-click="removeServiceFromServiceList($index)">&times;</button><!--service time single remove date & time-->
                                        </div>
                                    </div>
                                </div>
                                <!--service time add-->
                                <div class="col-lg-12 col-md-12 form-group">
                                    <!--service time day-->
                                    <div class="col-lg-5 col-md-5">
                                        <select class="form-control" name="serviceDay" title="Sunday" data-ng-model="serviceObject.day"><!--service time day select-->
                                            <option>Sunday</option>
                                            <option>Monday</option>
                                            <option>Tuesday</option>
                                            <option>Wednesday</option>
                                            <option>Thursday</option>
                                            <option>Friday</option>
                                            <option>Saturday</option>
                                        </select><!--service time day select-->
                                    </div>
                                    <!--service time hour-->
                                    <div class="col-lg-5 col-md-5 add-service">
                                        <select class="form-control" name="serviceTime" title="12:00 am" data-ng-model="serviceObject.time"><!--service time hour select-->
                                            <option>12:00 am</option>
                                            <option>1:00 am</option>
                                            <option>2:00 am</option>
                                            <option>3:00 am</option>
                                            <option>4:00 am</option>
                                            <option>5:00 am</option>
                                            <option>6:00 am</option>
                                            <option>7:00 am</option>
                                            <option>8:00 am</option>
                                            <option>9:00 am</option>
                                            <option>10:00 am</option>
                                            <option>11:00 am</option>
                                            <option>12:00 pm</option>
                                            <option>1:00 pm</option>
                                            <option>2:00 pm</option>
                                            <option>3:00 pm</option>
                                            <option>4:00 pm</option>
                                            <option>5:00 pm</option>
                                            <option>6:00 pm</option>
                                            <option>7:00 pm</option>
                                            <option>8:00 pm</option>
                                            <option>9:00 pm</option>
                                            <option>10:00 pm</option>
                                            <option>11:00 pm</option>
                                        </select><!--service time hour select-->
                                    </div>
                                    <div class="col-lg-2 col-md-2 add-service"><button class="btn btn-default btn-block" ng-click="addServiceToServiceList()"><span class="glyphicon glyphicon-plus"></span> Add</button></div><!--add another service time link-->
                                </div>
                            </div>
                            <!--service icon and update button-->
                            <div class="form-group">
                                <div class="col-lg-12 col-md-12">
                                    <div class="col-lg-6 col-md-6"><a href=""><span class="glyphicon glyphicon-info-sign"></span></a></div><!--service time info icon-->
                                    <div class="col-lg-6 col-md-6"><button type="submit" class="btn btn-md btn-purple pull-right" ng-click="updateChurchServices()">Update</button></div><!--service time button-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--delete account container-->
    <div class="col=lg-12 col-md-12 single-settings-form">
        <p><a href="#" class="text-danger">Delete Account</a> - this is not recommended.</p><!--delete account link-->
    </div>
</div>
