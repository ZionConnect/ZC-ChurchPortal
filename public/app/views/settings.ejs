<!--portal church settings---------------------------------------------------------------->
<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
    <!--full church form container-->
    <div class="col-lg-12 col-md-12 settings-form">
        <!--church form update alerts-->
        <div class="col-lg-12 col-md-12">

            <!--reset password confirmation popup-->
            <div class="alert alert-info" data-ng-show="resetPasswordConfirmationMessage">
                Are you sure you want to reset your password?
                You will be redirect to the login page and will be required to log back in with new password.
                <br/>
                <a href="" class="btn btn-success btn-sm" data-ng-click="resetPassword()" data-ng-click="resetPasswordConfirmationMessage = false"> Yes</a>
                <button type="button" class="btn btn-danger btn-sm" data-ng-click="resetPasswordConfirmationMessage = false">No</button>
            </div>
            <!--delete account confirmation message-->
            <div class="alert alert-danger" data-ng-show="deleteAccountConfirmationMessage">
                Are you sure you want to delete your account and lose all your data
                and kick all your church members off the social network?
                <br/>
                <a href="#" class="btn btn-success btn-sm" data-ng-click="deleteAccount()"> Yes</a>
                <button type="button" class="btn btn-danger btn-sm" data-ng-click="deleteAccountConfirmationMessage = false">No</button>
            </div>

            <!--update successful-->
            <div class="alert alert-success alert-dismissable" data-ng-show="updateSuccess">
                <span>Successful! Your changes have been updated.</span><!--update successful paragraph-->
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update successful x icon-->
            </div>
            <!--update password successful-->
            <div class="alert alert-success alert-dismissable" data-ng-show="resetSuccess">
                <span>Successful! Your password has been reset.</span><!--update password successful paragraph-->
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update password successful x icon-->
            </div>
            <!--update failed error-->
            <div class="alert alert-danger alert-dismissable" data-ng-show="updateFailure">
                <span>Oops! We are having trouble updating your account. Please try again later.</span><!--update failed error paragraph-->
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update failed error x icon-->
            </div>
            <!--update password error-->
            <div class="alert alert-danger alert-dismissable" data-ng-show="passwordMatchError">
                <span>Passwords do not match. Check your spelling and try again.</span><!--update password error paragraph-->
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button><!--update password error x icon-->
            </div>
        </div>
        <!--column 1-->
        <!--church info container-->
        <div class="col-lg-6 col-md-6">
            <div class="col-lg-12 col-md-12 single-settings-form">
                <div class="panel panel-default">
                    <!--church info head-->
                    <div class="panel-heading">
                        <h3 class="panel-title purple-header">Church Info</h3>
                    </div>
                    <!--church info body-->
                    <div class="panel-body">
                        <!--church info form-->
                        <form>
                            <!--church info name-->
                            <div class="form-group">
                                <label class="control-label" for="churchName">Name</label>
                                <input type="text" class="form-control" id="churchName" name="churchName" data-ng-model="updateObject.name" value="{{currentUser.name}}"/>
                            </div>
                            <!--church info address-->
                            <div class="form-group">
                                <label class="control-label" for="churchAddress">Address</label>
                                <input type="text" class="form-control" id="churchAddress" name="churchAddress" value="{{currentUser.address.street}}" data-ng-model="updateObject.address" />
                            </div>
                            <!--church info city-->
                            <div class="form-group">
                                <label class="control-label" for="churchCity">City</label>
                                <input type="text" class="form-control" id="churchCity" name="churchCity" value="{{currentUser.address.city}}" data-ng-model="updateObject.city" />
                            </div>
                            <!--church info state-->
                            <div class="form-group">
                                <label class="control-label" for="churchState">State</label>
                                <select class="form-control" id="churchState" name="churchState" title="State" value="{{currentUser.address.state}}" data-ng-model="updateObject.state">
                                    <option>AL</option>
                                    <option>AK</option>
                                    <option>AZ</option>
